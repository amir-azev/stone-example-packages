// greeter - Simple greeting generator for Stone

fn hello(name: str) -> str {
  return "Hello, " + name + "!"
}

fn goodbye(name: str) -> str {
  return "Goodbye, " + name + "!"
}

fn welcome(name: str) -> str {
  return "Welcome, " + name + "! Nice to meet you."
}

fn cheer(name: str) -> str {
  return "You're doing great, " + name + "!"
}
