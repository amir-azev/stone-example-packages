// greeter - Simple greeting generator for Stone

export fn hello(name: str) -> str {
  return "Hello, " + name + "!"
}

export fn goodbye(name: str) -> str {
  return "Goodbye, " + name + "!"
}

export fn welcome(name: str) -> str {
  return "Welcome, " + name + "! Nice to meet you."
}

export fn cheer(name: str) -> str {
  return "You're doing great, " + name + "!"
}
